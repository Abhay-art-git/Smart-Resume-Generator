<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= data.fullname %> - Portfolio</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(to bottom right, #e3f2fd, #ffffff);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      padding: 50px 0;
      color: #212529;
    }
    .portfolio-card {
      background: #ffffff;
      padding: 40px;
      border-radius: 20px;
      box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
      max-width: 900px;
      margin: auto;
    }
    h1 {
      font-size: 2.75rem;
      font-weight: 700;
      color: #1d3557;
      margin-bottom: 10px;
    }
    .subtitle {
      font-size: 1.1rem;
      color: #6c757d;
      margin-bottom: 30px;
    }
    h2 {
      font-size: 1.6rem;
      margin-top: 35px;
      margin-bottom: 15px;
      border-bottom: 2px solid #dee2e6;
      padding-bottom: 5px;
      color: #343a40;
    }
    ul {
      padding-left: 20px;
    }
    ul li {
      margin-bottom: 5px;
    }
    .contact-links a {
      display: inline-block;
      margin-right: 15px;
      color: #0d6efd;
      font-weight: 500;
      text-decoration: none;
    }
    .contact-links a:hover {
      text-decoration: underline;
    }
    .section-content {
      background-color: #f8f9fa;
      padding: 15px 20px;
      border-radius: 10px;
      box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.03);
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="portfolio-card">
      <h1><%= data.fullname %></h1>
      <p class="subtitle"><%= data.about %></p>

      <h2>Skills</h2>
      <div class="section-content">
        <ul>
          <% data.skills.split(',').forEach(skill => { %>
            <li><%= skill.trim() %></li>
          <% }); %>
        </ul>
      </div>

      <h2>Education</h2>
      <div class="section-content">
        <ul>
          <% data.education.forEach(edu => { %>
            <li><%= edu %></li>
          <% }); %>
        </ul>
      </div>

      <h2>Experience</h2>
      <div class="section-content">
        <ul>
          <% data.experience.forEach(exp => { %>
            <li><%= exp %></li>
          <% }); %>
        </ul>
      </div>

      <h2>Projects</h2>
      <div class="section-content">
        <ul>
          <% data.projects.forEach(project => { %>
            <li><%= project %></li>
          <% }); %>
        </ul>
      </div>

      <h2>Contact</h2>
      <div class="section-content">
        <p>Email: <strong><%= data.contact %></strong></p>
        <div class="contact-links">
          <% if (data.linkedin) { %>
            <a href="<%= data.linkedin %>" target="_blank">LinkedIn</a>
          <% } %>
          <% if (data.github) { %>
            <a href="<%= data.github %>" target="_blank">GitHub</a>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Download Button -->
  <div class="text-center mt-4">
    <button class="btn btn-primary" onclick="window.print()">Download Resume</button>
  </div>
</body>
</html>
